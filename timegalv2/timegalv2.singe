function setupLevel01(thisSegment)									-- In this function we will enter the moves for Level01. 
																	-- The list of moves is obviously the longest part of this file. 
	if thisSegment == SEGMENT01 then 								-- We begin with segment 1 (Scene 1)

		segmentStart = offsetLevel01Clipend + 1						-- Start of the first segment. Starts at the intro Clip for Level 1, so don't touch.
		segmentEnd   = offsetLevel01 + 748							-- End of the segment (frame). You will change the value depending on you own video.
		totalMoves   = 7											-- Number of moves to complete within the segment.	
		
		move = nil; move = {}										-- Don't touch.
		move[1] = {}; move[1] = {142, 162, RIGHT, 1, 0, 0}			-- 1st move : BUTTON1 between frame 1352 of the movie and ens at 1374 or Death #1.
		move[2] = {}; move[2] = {227, 247, RIGHT, 1, 0, 0}			-- And so on. 
		move[3] = {}; move[3] = {297, 317, LEFT, 2, 0, 0}			-- You need at least one move per segment.	
		move[4] = {}; move[4] = {447, 467, RIGHT, 3, 0, 0}			-- The gap between StartFrame and EndFrame is important 25 is long 10 very short. 
		move[5] = {}; move[5] = {497, 517, LEFT, 4, 0, 0}			-- Here, we trigger Death #3.
		move[6] = {}; move[6] = {572, 592, UP, 5, 0, 0}
		move[7] = {}; move[7] = {687, 707, RIGHT, 6, 0, 0}

	end

end


